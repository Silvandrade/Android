<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    tools:context=".register.presentation.RegisterActivity">

    <ScrollView
        android:id="@+id/register_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment
                android:id="@+id/register_fragment"
                android:name="com.silvandrade.instagramremakejava.register.presentation.RegisterPhotoFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                tools:layout="@layout/fragment_register_photo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/register_button_jump"
                style="@style/InstaFormButton.Link"
                android:layout_gravity="center"
                android:layout_marginBottom="36dp"
                android:text="@string/jump" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>