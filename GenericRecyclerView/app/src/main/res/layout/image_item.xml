<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_text_view_cabeçalho"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:padding="4dp"
        android:text="@string/cabeçalho"
        app:layout_constraintBottom_toTopOf="@id/item_image_view_user"
        app:layout_constraintEnd_toEndOf="@id/item_image_view_user"
        app:layout_constraintStart_toStartOf="@+id/item_image_view_user" />

    <ImageView
        android:id="@+id/item_image_view_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_text_view_cabeçalho" />

    <TextView
        android:id="@+id/item_text_view_rodape"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/rodape"
        app:layout_constraintEnd_toEndOf="@id/item_image_view_user"
        app:layout_constraintStart_toStartOf="@+id/item_image_view_user"
        app:layout_constraintTop_toBottomOf="@+id/item_image_view_user" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginVertical="4dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/item_text_view_rodape"
        app:layout_constraintEnd_toEndOf="@id/item_image_view_user"
        app:layout_constraintStart_toStartOf="@id/item_image_view_user"/>

</androidx.constraintlayout.widget.ConstraintLayout>